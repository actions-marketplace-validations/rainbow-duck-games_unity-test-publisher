    "tests"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rainbow-duck-games/unity-test-publisher/issues"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@actions/glob": "^0.1.1",
    "@octokit/types": "^6.3.2",
    "handlebars": "^4.7.7",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^14.14.9",
    "@types/handlebars": "^4.1.0",
    "@typescript-eslint/parser": "^4.31.1",
    "@vercel/ncc": "^0.25.1",
    "eslint": "^7.18.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^27.2.0",
    "jest-circus": "^27.2.0",
    "js-yaml": "^3.14.0",
    "prettier": "2.2.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
